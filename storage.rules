rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /resumes/{userId}/{allPaths=**} {
      // السماح بالقراءة لصاحب الملف أو المسؤول فقط
      allow read: if request.auth != null && (request.auth.uid == userId || request.auth.token.email == 'dev.mohattia@gmail.com');
      
      // السماح بالكتابة لصاحب الحساب فقط، مع التأكد من أن الملف بصيغة PDF وحجمه أقل من 5MB
      allow write: if request.auth != null 
                   && request.auth.uid == userId 
                   && request.resource.size < 5 * 1024 * 1024
                   && request.resource.contentType.matches('application/pdf');
    }
  }
}